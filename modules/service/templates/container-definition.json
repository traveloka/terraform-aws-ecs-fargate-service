[
  {
    "name": "${container_name}",
    "image": "${image_name}:${version}",
    "cpu": 256,
    "memory": 512,
    "essential": true,
    "environment": [
      { "name": "PORT", "value": "${port}" }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "${version}"
      }
    },
    "portMappings": [
      {
        "protocol": "tcp",
        "containerPort": ${port}
      }
    ]
  }
]
